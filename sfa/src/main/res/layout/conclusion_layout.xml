<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:fillViewport="true">

        <LinearLayout
    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"
            android:orientation="vertical">

    <TextView
        style="@style/TextStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pedding_medium"
        android:text="Conclusion"
        android:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:id="@+id/parent_conclusion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/pedding_medium"

                >

    <com.gaadi.sfa.materialedittext.MaterialEditText
        android:id="@+id/mev_remarks"
        style="@style/editTextStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Remarks" />
    <TextView
        style="@style/TextStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer Feedback"

        />

        <RadioGroup
            style="@style/TextStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                style="@style/radio_button_style_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/custom_btn_radio_happy"
                android:padding="@dimen/pedding_small"
                android:text="Happy" />
            <RadioButton

                style="@style/radio_button_style_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/custom_btn_radio_mad"
                android:text="Mad" />
            <RadioButton
                style="@style/radio_button_style_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/custom_btn_radio_sad"
                android:text="Sad" />
            <RadioButton
                style="@style/radio_button_style_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/custom_btn_radio_confused"
                android:text="Confused" />


        </RadioGroup>

    <TextView
        style="@style/TextStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Next Follow Up"
        android:textColor="@color/cardview_dark_background"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:minHeight="0dp"
    android:orientation="horizontal"
    android:weightSum="2">


    <com.gaadi.sfa.materialedittext.MaterialEditText
        android:id="@+id/mev_selectdate"
        style="@style/editTextStyleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Select Date"
        />

    <com.gaadi.sfa.materialedittext.MaterialEditText
        android:id="@+id/mev_add_time"
        style="@style/editTextStyleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Add Time"
        />

    </LinearLayout>
</LinearLayout>


    <com.gaadi.sfa.materialedittext.MaterialEditText
        android:id="@+id/mev_add_note"
        style="@style/editTextStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Add Note"
        />

        </LinearLayout>


    </ScrollView>
</merge>



<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp"
    android:animateLayoutChanges="true"
    android:elevation="6dp"
    android:fadingEdge="horizontal">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
        android:id="@+id/dealer_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
        android:layout_weight="1"
            android:src="@drawable/checkin"

        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/dealername"
                style="@style/TextStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text="Carnation Sales Pvt Ltd"

                    />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dealeradress"
                style="@style/TextStyleNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daryaganj NewDdelhi"
                android:textColor="@color/gray"
                android:textSize="12dp"
                />

        </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/checkin_time_title"
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check In:" />
                <TextView
                    android:id="@+id/checkin_time"
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="07:35 PM"
                    android:textColor="@color/gray"

                    />
                <TextView
                    android:id="@+id/checkout_time_title"
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check Out:"

                    />
                <TextView
                    android:id="@+id/checkout_time"
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 07:35 PM"
                    android:textColor="@color/gray"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/swipe_icon_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_left"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="10% left"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/callimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="metransparent" parent ="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->


        <item name="android:colorAccent" tools:targetApi="21">@color/colorAccent</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimary">@color/color_for_login</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>

        <item name="android:colorPrimary" tools:targetApi="21">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/colorPrimaryDark</item>

    </style>
    <!--Text Font styling-->
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <!-- <item name="fontPath">fonts/nunito_regular.ttf</item>-->
    </style>




    <style name="AppThemeFullscreen" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/color_for_login</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/background_red_color</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/color_for_login</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/colorPrimaryDark</item>
    </style>

    <style name="AppCompatNoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">


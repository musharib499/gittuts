    <style name="AppCompatNoActionBarThemeDrawer" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorAccent" tools:targetApi="21">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/white</item>
